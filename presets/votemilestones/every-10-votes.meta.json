{
  "schemaVersion": 2,
  "id": "votemilestone:every-10-votes",
  "type": "votemilestone_structured",
  "display": {
    "name": "Every 10 total votes (Every)",
    "description": "Runs every time a player's all-time votes hit a multiple of 10."
  },
  "match": {
    "keywords": [
      "votemilestone",
      "milestone",
      "every",
      "alltime"
    ]
  },
  "placeholders": {
    "milestoneId": {
      "type": "string",
      "label": "Milestone ID",
      "default": "Every10Votes"
    },
    "enabled": {
      "type": "string",
      "label": "Enabled (true/false)",
      "default": "true"
    },
    "total": {
      "type": "string",
      "label": "Total (ALLTIME_VOTES, DAILY_VOTES, POINTS, ...)",
      "default": "ALLTIME_VOTES"
    },
    "triggerType": {
      "type": "string",
      "label": "Trigger type (AT or EVERY)",
      "default": "EVERY"
    },
    "atList": {
      "type": "string",
      "label": "At list (one per line, used if AT)",
      "default": "1"
    },
    "every": {
      "type": "string",
      "label": "Every (number, used if EVERY)",
      "default": "10"
    },
    "group": {
      "type": "string",
      "label": "Group (optional)",
      "default": ""
    },
    "limitType": {
      "type": "string",
      "label": "Limit type (NONE, COOLDOWN, WINDOW_DAY, WINDOW_WEEK, WINDOW_MONTH, WINDOW_YEAR)",
      "default": "NONE"
    },
    "limitDuration": {
      "type": "string",
      "label": "Limit duration (only for COOLDOWN)",
      "default": "12h"
    }
  },
  "verified": false
}
