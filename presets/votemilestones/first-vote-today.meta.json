{
  "schemaVersion": 2,
  "id": "votemilestone:first-vote-today",
  "type": "votemilestone_structured",
  "display": {
    "name": "First vote of the day (At 1, daily)",
    "description": "Runs when a player's daily votes reach 1."
  },
  "match": {
    "keywords": [
      "votemilestone",
      "milestone",
      "daily",
      "at"
    ]
  },
  "placeholders": {
    "milestoneId": {
      "type": "string",
      "label": "Milestone ID",
      "default": "FirstVoteToday"
    },
    "enabled": {
      "type": "string",
      "label": "Enabled (true/false)",
      "default": "true"
    },
    "total": {
      "type": "string",
      "label": "Total (ALLTIME_VOTES, DAILY_VOTES, POINTS, ...)",
      "default": "DAILY_VOTES"
    },
    "triggerType": {
      "type": "string",
      "label": "Trigger type (AT or EVERY)",
      "default": "AT"
    },
    "atList": {
      "type": "string",
      "label": "At list (one per line, used if AT)",
      "default": "1"
    },
    "every": {
      "type": "string",
      "label": "Every (number, used if EVERY)",
      "default": "10"
    },
    "group": {
      "type": "string",
      "label": "Group (optional)",
      "default": ""
    },
    "limitType": {
      "type": "string",
      "label": "Limit type (NONE, COOLDOWN, WINDOW_DAY, WINDOW_WEEK, WINDOW_MONTH, WINDOW_YEAR)",
      "default": "NONE"
    },
    "limitDuration": {
      "type": "string",
      "label": "Limit duration (only for COOLDOWN)",
      "default": "12h"
    }
  },
  "verified": false
}
