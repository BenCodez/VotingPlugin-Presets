{
  "schemaVersion": 2,
  "id": "votemilestone:all-sites-today",
  "type": "votemilestone_structured",
  "display": {
    "name": "All sites today (At, WINDOW_DAY limit)",
    "description": "Runs when a player votes on all sites in a day (unique sites)."
  },
  "match": {
    "keywords": [
      "votemilestone",
      "milestone",
      "allsites",
      "daily",
      "limit"
    ]
  },
  "placeholders": {
    "milestoneId": {
      "type": "string",
      "label": "Milestone ID",
      "default": "AllSitesToday"
    },
    "enabled": {
      "type": "string",
      "label": "Enabled (true/false)",
      "default": "true"
    },
    "total": {
      "type": "string",
      "label": "Total (ALLTIME_VOTES, DAILY_VOTES, POINTS, ...)",
      "default": "ALLSITES_TODAY"
    },
    "triggerType": {
      "type": "string",
      "label": "Trigger type (AT or EVERY)",
      "default": "AT"
    },
    "atList": {
      "type": "string",
      "label": "At list (one per line, used if AT)",
      "default": "5"
    },
    "every": {
      "type": "string",
      "label": "Every (number, used if EVERY)",
      "default": "10"
    },
    "group": {
      "type": "string",
      "label": "Group (optional)",
      "default": ""
    },
    "limitType": {
      "type": "string",
      "label": "Limit type (NONE, COOLDOWN, WINDOW_DAY, WINDOW_WEEK, WINDOW_MONTH, WINDOW_YEAR)",
      "default": "WINDOW_DAY"
    },
    "limitDuration": {
      "type": "string",
      "label": "Limit duration (only for COOLDOWN)",
      "default": "12h"
    }
  },
  "verified": false
}
