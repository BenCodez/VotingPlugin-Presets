{
  "schemaVersion": 1,
  "id": "reward:basic:messages_only",
  "display": {
    "name": "Reward: Messages only",
    "description": "A reward that only sends messages (no commands)."
  },
  "match": {
    "keywords": ["reward", "messages", "message only", "no commands"]
  },
  "placeholders": {
    "rewardKey": {
      "type": "string",
      "label": "Reward key name",
      "default": "MessageReward",
      "example": "VoteMessageReward"
    },
    "messages": {
      "type": "string",
      "label": "Messages (one per line)",
      "default": "&aThanks for voting on &e%service%&a!",
      "example": "&aThanks for voting!\n&aCome vote again tomorrow!"
    }
  },
  "fragments": [
    {
      "path": "presets/rewards/messages_only.rewards.yml",
      "mergeInto": "Rewards"
    }
  ],
  "verified": true
}
