{
  "schemaVersion": 1,
  "id": "reward:inline:messages_only",
  "display": {
    "name": "Inline Reward: Messages only",
    "description": "Adds Messages under VoteSites.<siteKey>.Rewards (no global Rewards key, no reward name)."
  },
  "match": {
    "keywords": ["reward", "inline", "messages", "no commands"]
  },
  "placeholders": {
    "messages": {
      "type": "string",
      "label": "Messages (one per line)",
      "default": "&aThanks for voting on &e%service%&a!",
      "example": "&aThanks for voting!\n&aCome vote again tomorrow!"
    }
  },
  "fragments": [
    {
      "path": "presets/rewards/inline_messages.rewardblock.yml",
      "mergeInto": "VoteSites.<siteKey>.Rewards"
    }
  ],
  "verified": true
}
