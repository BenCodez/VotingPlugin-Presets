{
  "schemaVersion": 1,
  "id": "reward:basic:commands_only",
  "display": {
    "name": "Reward: Commands only",
    "description": "A reward that only runs commands (no messages)."
  },
  "match": {
    "keywords": ["reward", "commands", "command only", "no messages"]
  },
  "placeholders": {
    "rewardKey": {
      "type": "string",
      "label": "Reward key name",
      "default": "CommandReward",
      "example": "VoteCommandReward"
    },
    "commands": {
      "type": "string",
      "label": "Commands (one per line)",
      "default": "eco give %player% 500",
      "example": "eco give %player% 500\ncrate give %player% vote 1"
    }
  },
  "fragments": [
    {
      "path": "presets/rewards/commands_only.rewards.yml",
      "mergeInto": "Rewards"
    }
  ],
  "verified": true
}
