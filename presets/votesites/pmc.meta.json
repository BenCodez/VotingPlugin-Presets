{
  "schemaVersion": 1,
  "id": "votesite:pmc",
  "display": {
    "name": "PlanetMinecraft (generic)",
    "description": "Generic PlanetMinecraft VoteSite preset with configurable vote delay behavior."
  },
  "match": {
    "domains": ["planetminecraft.com", "www.planetminecraft.com"],
    "keywords": ["pmc", "planet minecraft"]
  },
  "placeholders": {
    "siteKey": {
      "type": "string",
      "label": "VoteSite key",
      "default": "PMC"
    },
    "displayName": {
      "type": "string",
      "label": "VoteSite display name",
      "default": "PlanetMinecraft"
    },
    "serviceSite": {
      "type": "string",
      "label": "ServiceSite",
      "default": "PMC"
    },
    "voteURL": {
      "type": "string",
      "label": "Vote URL",
      "default": "ADD_VOTE_URL_LATER",
      "example": "https://www.planetminecraft.com/server/your-server/vote/"
    },
    "voteDelay": {
      "type": "string",
      "label": "VoteDelay (blank = omit)",
      "default": "24h",
      "example": "12h"
    },
    "waitUntilVoteDelay": {
      "type": "string",
      "label": "WaitUntilVoteDelay (true/false, blank = omit)",
      "default": "",
      "example": "true"
    },
    "voteDelayDaily": {
      "type": "string",
      "label": "VoteDelayDaily (true/false, blank = omit)",
      "default": "",
      "example": "true"
    },
    "voteDelayDailyHour": {
      "type": "string",
      "label": "VoteDelayDailyHour (0â€“23, blank = omit)",
      "default": "",
      "example": "14"
    }
  },
  "fragments": [
    {
      "path": "presets/votesites/generic.votesites.yml",
      "mergeInto": "VoteSites"
    }
  ],
  "verified": true
}
