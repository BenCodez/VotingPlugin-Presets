{
  "schemaVersion": 1,
  "id": "votesite:pmc",
  "display": {
    "name": "PlanetMinecraft (generic)",
    "description": "Generic PlanetMinecraft VoteSite entry. VoteURL can be added later via search or manual edit."
  },
  "match": {
    "domains": [
      "planetminecraft.com",
      "www.planetminecraft.com"
    ],
    "keywords": [
      "pmc",
      "planet minecraft"
    ]
  },
  "placeholders": {
    "siteKey": {
      "type": "string",
      "default": "PMC",
      "example": "PMC"
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "displayName": {
      "type": "string",
      "default": "PlanetMinecraft",
      "example": "PlanetMinecraft"
    },
    "serviceSite": {
      "type": "string",
      "default": "PMC",
      "example": "PMC"
    },
    "priority": {
      "type": "number",
      "default": 5
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "voteUrl": {
      "type": "string",
      "default": "ADD_VOTE_URL_LATER"
    },
    "voteDelay": {
      "type": "duration",
      "default": "24h",
      "example": "24h"
    },
    "waitUntilVoteDelay": {
      "type": "boolean",
      "default": false
    },
    "voteDelayDaily": {
      "type": "boolean",
      "default": false
    },
    "voteDelayDailyHour": {
      "type": "number",
      "optional": true,
      "example": 14
    },
    "forceOffline": {
      "type": "boolean",
      "default": false
    },
    "displayItemMaterial": {
      "type": "string",
      "default": "DIAMOND"
    },
    "displayItemAmount": {
      "type": "number",
      "default": 1
    }
  },
  "fragments": [
    {
      "path": "presets/votesites/generic.votesites.yml",
      "mergeInto": "VoteSites"
    }
  ]
}
